{
  "name": "atlas-ui-customer",
  "version": "1.0.0",
  "description": "Atlas Customer",
  "private": true,
  "main": "index.js",
  "scripts": {
    "compile:purs": "spago build",
    "bundle:android": "webpack --env prod --mode=production --progress --config webpack.android.js && npm run webpack-uglify",
    "bundle:ios": "webpack --env prod --mode=production --progress --config webpack.ios.js",
    "prod:android": "npm-run-all compile:purs bundle:android",
    "prod:ios": "npm-run-all compile:purs \"bundle:ios\"",
    "update-translation": "sh ../updateTranslation.sh ui-customer",
    "compileAndCreateJsa": "sh compileAndCreateJsa.sh",
    "dev": "spago build --watch",
    "webpack-dev": "webpack-dev-server --env sandbox --mode development --config webpack.android.js --host",
    "webpack-dev-ios": "webpack-dev-server --env master --mode development --config webpack.ios.js --host",
    "start:ios": "npm-run-all -p dev webpack-dev-ios update-translation",
    "start": "npm-run-all -p dev webpack-dev update-translation",
    "repl": "spago repl",
    "clean": "sh cleanSpago.sh",
    "webpack-uglify": "uglifyjs dist/android/index_bundle.js --output dist/android/index_bundle.js --mangle --compress"
  },
  "author": "juspay",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.7.7",
    "@babel/preset-env": "^7.7.7",
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@digitalroute/cz-conventional-changelog-for-jira": "^7.4.1",
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/commit-analyzer": "^9.0.2",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/npm": "^9.0.1",
    "@semantic-release/release-notes-generator": "^10.0.3",
    "babel-loader": "^8.0.6",
    "commitlint-config-jira": "^1.6.4",
    "commitlint-plugin-jira-rules": "^1.6.4",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.52.0",
    "eslint-config-google": "^0.14.0",
    "filemanager-webpack-plugin": "^2.0.5",
    "husky": "^8.0.1",
    "npm-run-all": "^4.1.5",
    "purty": "^7.0.0",
    "semantic-release": "^19.0.5",
    "uglify-js": "^3.17.4",
    "webpack": "^4.41.5",
    "webpack-cli": "^3.3.10",
    "webpack-dev-server": "^3.10.1",
    "webpack-merge": "^5.8.0"
  },
  "dependencies": {
    "axios": ">=1.6.0",
    "core-js": "^2.6.11",
    "moment": "^2.27.0",
    "presto-ui": "git+https://github.com/juspay/presto-ui.git#nammayatri-pilot",
    "purty": "^7.0.0",
    "ramda": "^0.26.1",
    "regenerator-runtime": "^0.13.5",
    "spago": "^0.21.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/@digitalroute/cz-conventional-changelog-for-jira",
      "jiraPrefix": "BKN",
      "jiraLocation": "post-type",
      "jiraAppend": ":"
    }
  },
  "commitlint": {
    "plugins": [
      "commitlint-plugin-jira-rules"
    ],
    "extends": [
      "jira"
    ],
    "rules": {
      "jira-task-id-max-length": [
        0
      ],
      "jira-commit-message-separator": [
        0
      ],
      "jira-commit-status-case": [
        0
      ],
      "jira-task-id-project-key": [
        0
      ],
      "jira-task-id-separator": [
        0
      ],
      "jira-task-id-case": [
        0
      ],
      "jira-task-id-min-length": [
        0
      ]
    }
  },
  "release": {
    "branches": [
      "main",
      {
        "name": "hotfix-[0-9]+",
        "prerelease": true
      }
    ],
    "repositoryUrl": "https://github.com/nammayatri/nammayatri.git",
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      "@semantic-release/changelog",
      "@semantic-release/git"
    ]
  }
}
